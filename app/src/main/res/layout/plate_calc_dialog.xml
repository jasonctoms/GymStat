<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Switch
        android:id="@+id/bar_type_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumbTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/plate3_title"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline"/>

    <TextView
        android:id="@+id/plate1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/plate1"
        app:layout_constraintLeft_toLeftOf="@+id/plate1"
        app:layout_constraintRight_toRightOf="@+id/plate1"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/plate1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circle1"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/plate2_title"
        app:layout_constraintBottom_toBottomOf="@+id/plate2"
        app:layout_constraintRight_toLeftOf="@+id/plate2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/plate2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/plate2"
        app:layout_constraintLeft_toLeftOf="@+id/plate2"
        app:layout_constraintRight_toRightOf="@+id/plate2"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/plate2"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/plate5_title"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline"/>

    <TextView
        android:id="@+id/plate3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/plate3"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/plate3"
        app:layout_constraintRight_toRightOf="@+id/plate3"/>

    <TextView
        android:id="@+id/plate3"
        android:layout_width="48dp"
        android:background="@drawable/circle3"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/plate2"
        app:layout_constraintBottom_toBottomOf="@+id/plate2"
        android:layout_height="48dp"
        app:layout_constraintLeft_toRightOf="@+id/plate2"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/plate4_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/plate4"
        app:layout_constraintLeft_toLeftOf="@+id/plate4"
        app:layout_constraintRight_toRightOf="@+id/plate4"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/plate4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle4"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/plate5"
        app:layout_constraintTop_toTopOf="@+id/plate5"
        app:layout_constraintRight_toLeftOf="@+id/plate5"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

    <TextView
        android:id="@+id/plate5_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/plate5"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/plate5"
        app:layout_constraintRight_toRightOf="@+id/plate5"
        app:layout_constraintHorizontal_bias="0.55"/>

    <TextView
        android:id="@+id/plate5"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:background="@drawable/circle5"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/wanted_plate_weight"
        android:layout_marginBottom="24dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"/>

    <TextView
        android:id="@+id/plate6_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/plate6"
        app:layout_constraintLeft_toLeftOf="@+id/plate6"
        app:layout_constraintRight_toRightOf="@+id/plate6"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/plate6"
        android:layout_width="24dp"
        android:background="@drawable/circle6"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/plate5"
        app:layout_constraintBottom_toBottomOf="@+id/plate5"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/plate5"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/wanted_plate_weight"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:selectAllOnFocus="true"
        tools:layout_conversion_absoluteX="168dp"
        tools:layout_conversion_absoluteY="421dp"
        tools:layout_conversion_absoluteWidth="75dp"
        tools:layout_conversion_absoluteHeight="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/decrement_plate_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subtract"
        app:layout_constraintRight_toLeftOf="@+id/wanted_plate_weight"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/wanted_plate_weight"
        app:layout_constraintBottom_toBottomOf="@+id/wanted_plate_weight"/>

    <ImageButton
        android:id="@+id/increment_plate_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_black"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/wanted_plate_weight"
        app:layout_constraintTop_toTopOf="@+id/wanted_plate_weight"
        app:layout_constraintBottom_toBottomOf="@+id/wanted_plate_weight"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="603dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="207dp"
        app:layout_constraintGuide_percent="0.50364965"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="43dp"
        app:layout_constraintGuide_percent="0.10462287"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9075426"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="373dp"/>

    <TextView
        android:text="@string/plate_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plate_calculator_title"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bar_type_switch"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:text="Calculated Weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculated_weight_title"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/increment_plate_weight"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/calculated_weight_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/calculated_weight_title"/>


</android.support.constraint.ConstraintLayout>