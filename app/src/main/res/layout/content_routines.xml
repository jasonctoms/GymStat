<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_routines"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.straightface.gymstat.RoutinesActivity"
    tools:showIn="@layout/app_bar_routines">

    <TextView
        android:id="@+id/no_routines_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_routines"
        android:textColor="?android:attr/textColorPrimary"/>

    <Button
        android:id="@+id/add_routine_button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_routine"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_text"
        android:textColor="?android:attr/textColorPrimary"/>

    <Button
        android:id="@+id/free_workout_button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_workout"
        android:textColor="@color/colorAccent"/>
</LinearLayout>
